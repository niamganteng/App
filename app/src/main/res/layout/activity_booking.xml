<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".BookingActivity">

    <RelativeLayout
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp">
        <ImageView
                android:src="@drawable/cepert"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"/>
        <ImageView
                android:id="@+id/btnlogout"
                android:textColor="#fff"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_logout"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"/>
        <ImageView
                android:text="Detil"
                android:textColor="#fff"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_account"
                android:layout_marginRight="@dimen/_40sdp"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"/>
        <ImageView
                android:text="Detil"
                android:textColor="#fff"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_baseline_shopping_cart_24"
                android:layout_marginRight="@dimen/_60sdp"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"/>
    </RelativeLayout>


    <androidx.cardview.widget.CardView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="@dimen/_279sdp"
            android:layout_height="@dimen/_130sdp"
            app:cardCornerRadius="@dimen/_8ssp"
            app:cardElevation="@dimen/_2ssp"
            tools:ignore="MissingConstraints">
        <ImageView
                android:id="@+id/BK_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="@dimen/_279sdp"
            android:layout_height="wrap_content">
        <TextView
        android:id="@+id/txtdftrspd"
        android:layout_marginLeft="@dimen/_20sdp"
        android:text="Detail"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        android:textColor="#020202"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <RelativeLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                        android:id="@+id/l1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/bn1"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:text="Kode"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/roboto"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/bn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bn1"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/roboto"
                        android:text="Merk"
                        android:textColor="#000000"
                        android:textSize="@dimen/_13sdp" />
                    <TextView
                            android:layout_marginTop="3dp"
                            android:id="@+id/bn3"
                            android:layout_below="@+id/bn2"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:text="Warna"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/roboto"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_marginTop="3dp"
                            android:id="@+id/bn4"
                            android:layout_below="@+id/bn3"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:text="Harga"
                            android:textSize="@dimen/_13sdp"
                            android:fontFamily="@font/roboto"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
            <RelativeLayout
                    android:layout_marginLeft="@dimen/_35sdp"
                    android:layout_toRightOf="@+id/ttk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/BK_kode"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:text="0H2626"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"
                        android:fontFamily="casual"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginTop="4dp"
                        android:id="@+id/BK_merk"
                        android:layout_below="@+id/BK_kode"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:text="mercedes-benz "
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"
                        android:fontFamily="casual"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/BK_warna"
                        android:layout_below="@+id/BK_merk"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:text="BIRU "
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"
                        android:fontFamily="casual"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/BK_harga"
                        android:layout_below="@+id/BK_warna"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:text="5000 "
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"
                        android:fontFamily="casual"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/ttk"
                    android:layout_toRightOf="@+id/l1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/bnn1"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:text=":"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/graybootstrap2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginTop="3dp"
                        android:id="@+id/bnn2"
                        android:layout_below="@+id/bnn1"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:text=":"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/graybootstrap2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginTop="3dp"
                        android:id="@+id/bnn3"
                        android:layout_below="@+id/bnn2"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:text=":"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/graybootstrap2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginTop="3dp"
                        android:id="@+id/bnn4"
                        android:layout_below="@+id/bnn3"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:text=":"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/graybootstrap2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <TextView
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:text="Pembayaran"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <RelativeLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_marginRight="@dimen/_10sdp"
                android:id="@+id/bank1"
                android:gravity="center"
                android:background="@drawable/rounded_bank"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp">
        <ImageView
                android:id="@+id/bBri"
                android:background="@drawable/bri"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_marginRight="@dimen/_10sdp"
                android:id="@+id/bank2"
                android:layout_toRightOf="@+id/bank1"
                android:gravity="center"
                android:background="@drawable/rounded_bank"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp">
            <ImageView
                    android:id="@+id/bBca"
                    android:background="@drawable/bca"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_marginRight="@dimen/_10sdp"
                android:id="@+id/bank3"
                android:layout_toRightOf="@+id/bank2"
                android:gravity="center"
                android:background="@drawable/rounded_bank"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp">
            <ImageView
                    android:id="@+id/bMandiri"
                    android:background="@drawable/mandiri"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/bank4"
                android:layout_toRightOf="@+id/bank3"
                android:gravity="center"
                android:background="@drawable/rounded_bank"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp">
            <ImageView
                    android:id="@+id/bCod"
                    android:background="@drawable/bri"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_21sdp"
            android:text="Masukan Jumlah Uang"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/roboto"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/BK_jumlahuang"
            android:layout_marginLeft="@dimen/_21sdp"
            android:background="@drawable/edittext"
            android:textColor="#000"
            android:inputType="number"
            android:text="  "
            android:layout_width="@dimen/_279sdp"
            android:layout_height="@dimen/_35sdp"/>

    <RelativeLayout
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
            android:id="@+id/asdd"
            android:layout_marginLeft="@dimen/_21sdp"
            android:text="Pembayaran Dengan Bank :  "
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/roboto"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/BK_bank"
                android:layout_toRightOf="@+id/asdd"
                android:text="  SILAHKAN PILIH BANK  "
                android:textSize="@dimen/_11sdp"
                android:textStyle="italic"
                android:fontFamily="sans-serif"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <Button
            android:id="@+id/BK_btnkonfir"
            android:layout_marginTop="@dimen/_20sdp"
            android:shadowColor="@null"
            android:layout_marginLeft="@dimen/_21sdp"
            android:background="@drawable/btnregister"
            android:layout_width="@dimen/_279sdp"
            android:text="Konfirmasi"
            android:textStyle="bold"
            android:textSize="@dimen/_9sdp"
            android:textColor="#fff"
            android:layout_height="@dimen/_40sdp"/>

</LinearLayout>