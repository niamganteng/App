<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".adminActivity.EditItem">

    <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_130sdp"
            app:cardCornerRadius="@dimen/_8ssp"
            app:cardElevation="@dimen/_2ssp"
            tools:ignore="MissingConstraints">
    <ImageView
            android:id="@+id/updateimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView

                    android:text="Kode Sepeda"
                    android:textColor="#000"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:id="@+id/updatekodesepeda"
                    android:background="@drawable/edittext"
                    android:textColor="#000"
                    android:inputType="textEmailAddress"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_35sdp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView

                    android:text="Merk"
                    android:textColor="#000"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:id="@+id/updatemerk"
                    android:background="@drawable/edittext"
                    android:textColor="#000"
                    android:inputType="textEmailAddress"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_35sdp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Warna"
                    android:textColor="#000"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:id="@+id/updatewarna"
                    android:background="@drawable/edittext"
                    android:textColor="#000"
                    android:inputType="textEmailAddress"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_35sdp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Harga Sewa"
                    android:textColor="#000"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                    android:id="@+id/updatehargasewa"
                    android:background="@drawable/edittext"
                    android:textColor="#000"
                    android:inputType="textEmailAddress"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_35sdp"/>
            <Button
                android:id="@+id/btnupdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>